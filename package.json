{
  "name": "typescript-action",
  "description": "GitHub Actions TypeScript template",
  "version": "0.0.6",
  "author": "",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm-run-all -s format:write package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action:app": "npx @github/local-action . src/deploy-app/main.ts .env.deploy-app",
    "local-action:secret": "npx @github/local-action . src/secrets/main.ts .env.secrets",
    "package:app": "npx rollup --config rollup-app.config.ts --configPlugin @rollup/plugin-typescript",
    "package:secret": "npx rollup --config rollup-secret.config.ts --configPlugin @rollup/plugin-typescript",
    "package": "npm-run-all -p package:app package:secret",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm-run-all -s format:write lint test coverage package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@github/local-action": "^4.0.0",
    "@jest/globals": "^30.0.5",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/qs": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "make-coverage-badge": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
